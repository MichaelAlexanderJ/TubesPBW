<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Unggah Topik</title>
    <link rel="stylesheet" href="assets/unggahTopik.css">
</head>
<body>
    <header>
        <%- include('./layout/head.ejs') %>
    </header>

    <div class="unggahContainer">

            <div class="unggahTop">
                <h3>Icon</h3>
                <h3>Unggah Topik Skripsi</h3>
    
                <p class="dueDateUnggah">Due/05/2022</p>
            </div>

        <br>
        <div class="unggahMain">
            
            <div class="formUnggah">
                <div class="alert">
                    <%=   %> 
                </div>
                <form method = POST action="/unggahTopik" id = "tambahTopik">
                    <fieldset>
                        <label for="Judul" class="judul" >Judul</label>
                        <input type="text" name = "judulT" id ="judulT">
                        <label for="bidangPeminatan">Bidang Peminatan</label>
                        <select name="peminatan" id="">
                            <option value="Data Science">Data Science</option>
                            <option value="Computing Science">Computing Science</option>
                        </select>
                        <label for="tipe">Tipe Skripsi</label>
                        <select name="tipeSkripsi" id="">
                            <option value="Bintang">*</option>
                            <option value="Reguler">Reguler</option>
                        </select>
                        <label for="periodeT">Tahun Ajaran</label>
                        <select name="periode" id="">
                            <option value="2020/2021">2020/2021</option>
                            <option value="2021/2022">2021/2022</option>
                        </select>
                        <label for="UploadFile">Upload File</label>
                        <input type="file" id="fileSkripsi">
                        <br>
                        <input type="submit" class="submitSkripsi" onclick="cekInputJudul()">
                    </fieldset>
                </form>
            </div>
        </div>

    </div>
    <script lang="javascript">
        function cekInputJudul() {
            var cekJudul = document.getElementById("judulT").value;
            }
            if (cekJudul != ""){
                alert("Berhasil Mengunggah Topik!");
        }
        else{
            alert("Input tidak boleh kosong!")
        }
    
        
    </script>
    <footer>
        <%- include('./layout/footer.ejs') %>
    </footer>

</body>
</html>