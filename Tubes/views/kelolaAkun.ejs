<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="assets/kelolaAkun.css">
    <title>Kelola Akun</title>
</head>
<body>

    <header>
        <%- include('./layout/head.ejs') %>
    </header>

    <div class="kelolaAkunContainer">
        <div class="kelolaAkunTop">
            <a href="http://localhost:8080/homeAdmin">
                <img src="assets/images/leftArrow.png" alt="">
            </a>
            <h3>Kelola Akun</h3>

            <div class="searchAkun">
                <form method="GET" action="/kelolaAkun">
                    <fieldset>
                        <legend>Search by Name</legend>
                        <input type="text" name="filter" value="<%= %>">
                        <input type="submit" class="submitAkun" value="SEARCH">
                    </fieldset>
                </form>
            </div>
        </div>

        <br>

        <div class="kelolaAkunMain">
                <div class="innerMain">
                    <% results.forEach(entry => {  %>
                    <a class="wrapper" href="">
                        <div class="innerMain1">
                            <img src="assets/images/adminIcon.jpg" class="adminIcon" alt="">
                            <h3 name="namaDosen" ><%= entry.namaD %></h3>
                            <div class="containerButton">
                                <form action="" class="submitEdit" method="post">
                                    <input type="submit" id="buttonEdit" value="Edit">
                                </form>
                            </div>
                        </div>
                    </a>
                    <% }) %>
                    <br>
                    <div class="paginationPage">
                        <% if(page > 1) { %> <a href="/kelolaAkun?page=<%=page-1%>">Before</a> <% } %>
                        <% for(let i = iteration; i <= ending; i++) { %>
                            <% if(i === page) { %>
                                <a class="selectedLink" href="/kelolaAkun?page=<%=i%>"><%=i%></a>
                                <% continue; %>
                             <% } %>
                                 <a href="/kelolaAkun?page=<%=i%>"><%=i%></a>
                                 <% } %>
                                 <% if(page < numPages) { %> <a href="/kelolaAkun?page=<%=page+1%>">After</a> <% } %>
                    </div>
                </div>
        </div>
    

    </div>

    <footer>
        <%- include('./layout/footer.ejs') %>
    </footer>
    
</body>
</html>